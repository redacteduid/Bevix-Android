<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Text "Choose your cup size" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Choose your cup size"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Placeholder icon and "Medium" button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_medium" /> <!-- Add a placeholder icon here -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="150 mL"
                android:textColor="@android:color/black"
                android:textSize="18sp" /> <!-- Add text "Medium 350 mL" here -->

            <Button
                android:id="@+id/buttonMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Medium"
                android:textSize="20sp" /> <!-- Add button "Medium" here -->
        </LinearLayout>

        <!-- Placeholder icon and "Large" button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_large" /> <!-- Add a placeholder icon here -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="250 mL"
                android:textColor="@android:color/black"
                android:textSize="18sp" /> <!-- Add text "Large 450 mL" here -->

            <Button
                android:id="@+id/buttonLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Large"
                android:textSize="20sp" /> <!-- Add button "Large" here -->
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/text_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Select Dominant Flavors: Choose one or two dominant flavors that you want to feature prominently in your drink, such as citrusy, fruity, or herbal notes. \n \n
+ Consider Complementary Ingredients: Identify ingredients that complement your chosen flavors, focusing on aspects like sweetness, acidity, and bitterness. \n \n
+ Experiment with Ratios: Begin by experimenting with different percentage ratios of ingredients to find the perfect balance. Start with smaller quantities and adjust to taste. \n \n
+ Personalize to Taste: Remember, there are no strict rules. Tailor the recipe according to your taste preferences and creativity. Let your imagination guide you"

        android:textSize="12sp"
        android:paddingTop="50dp" />

</LinearLayout>
